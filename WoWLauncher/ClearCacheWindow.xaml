<Window x:Class="WoWLauncher.ClearCacheWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Clear Cache Window" Height="150" Width="400">

    <Grid>
        <Grid Margin="0,0,0,0">
            <TextBlock
                Text="This will delete your cache.&#x0a;You will have to wait for the launcher to re-check your files/patches.&#x0a;Should only do this to re-check to make sure all files/patches are correct.&#x0a;Are you sure you want to clear cache?"
                TextAlignment="Center"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5">
            <Button Name="YesButton" Content="Yes" Width="75" Click="YesButton_Click" />
            <Button Name="NoButton" Content="No" Width="75" Margin="50,0,0,0" Click="NoButton_Click" />
        </StackPanel>
    </Grid>
</Window>