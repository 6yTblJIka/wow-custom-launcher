<Window x:Class="CleckList.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress" Height="120" Width="300" WindowStartupLocation="CenterOwner"
        Topmost="True">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <Grid Margin="0,0,0,10"> <!-- Space between grids -->
            <ProgressBar x:Name="ProgressBar" Height="30" VerticalAlignment="Center" />
            <TextBlock x:Name="ProgressText" Text="Test" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
        <Grid>
            <ProgressBar x:Name="ProgressBar2" Height="30" VerticalAlignment="Center" />
            <TextBlock x:Name="ProgressText2" Text="Test" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
    </StackPanel>
</Window>